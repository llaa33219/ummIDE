{
  "app-id": "net.bloupla.ummide",
  "runtime": "org.gnome.Platform",
  "runtime-version": "48",
  "sdk": "org.gnome.Sdk",
  "command": "ummide",
  "finish-args": [
    "--socket=wayland",
    "--socket=fallback-x11",
    "--device=dri",
    "--share=ipc",
    "--filesystem=xdg-documents",
    "--filesystem=xdg-run/gvfsd:ro",
    "--filesystem=xdg-config/fontconfig:ro",
    "--filesystem=xdg-config/gtk-3.0:ro",
    "--filesystem=xdg-config/gtk-4.0:ro",
    "--filesystem=~/.cache/fontconfig:ro",
    "--talk-name=org.freedesktop.portal.FileChooser",
    "--talk-name=org.gtk.vfs.*",
    "--talk-name=org.gnome.SettingsDaemon.XSettings",
    "--env=LANG=ko_KR.UTF-8"
  ],
  "add-extensions": {
    "org.freedesktop.Platform.Locale": {
      "directory": "share/runtime/locale"
    }
  },
  "modules": [
    {
      "name": "deno",
      "buildsystem": "simple",
      "build-commands": [
        "install -Dm755 deno /app/bin/deno"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/denoland/deno/releases/download/v2.4.5/deno-x86_64-unknown-linux-gnu.zip",
          "sha256": "6f9d8115bb3df582c0c5674507e906323b680be0f0b15e735d0cd5ec6be44444",
          "only-arches": ["x86_64"]
        },
        {
          "type": "archive",
          "url": "https://github.com/denoland/deno/releases/download/v2.4.5/deno-aarch64-unknown-linux-gnu.zip",
          "sha256": "4e3e86739fe527c6891dbfa73799a5ec1b11f45898aaebf73bf3247c2e6a53dd",
          "only-arches": ["aarch64"]
        }
      ]
    },
    {
      "name": "umjunsik-lang",
      "buildsystem": "simple",
      "build-commands": [
        "mkdir -p /app/share/umjunsik-lang",
        "cp -r * /app/share/umjunsik-lang/"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/rycont/umjunsik-lang.git",
          "commit": "e973f9d22b9803ee86b53d8e60f1b65ab08c7547"
        }
      ]
    },
    {
      "name": "ummide",
      "buildsystem": "meson",
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/llaa33219/ummIDE.git",
          "branch": "main"
        }
      ]
    }
  ]
}